# CTF Scoreboard Environment Configuration Template
# Copy this file to .env and modify the values as needed

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Host to bind the servers to (default: 0.0.0.0 for Docker)
HOST=0.0.0.0

# TCP socket server port for client connections
SOCKET_PORT=8080

# Web interface port for browser access
WEB_PORT=8081

# Database file path (use persistent volume path in Docker)
DB_PATH=/app/data/scoreboard.db

# Configuration file path (use persistent volume path in Docker)
CONFIG_PATH=/app/data/ctf_config.json

# =============================================================================
# CTF BASIC CONFIGURATION
# =============================================================================

# Name of the CTF competition
CTF_NAME=CTF Scoreboard

# =============================================================================
# SCORING CONFIGURATION
# =============================================================================

# Scoring type: "golf" (lower is better) or "standard" (higher is better)
SCORING_TYPE=golf

# Allow tied scores
ALLOW_TIES=true

# Show scores on the leaderboard
SHOW_SCORES=true

# =============================================================================
# FEATURE TOGGLES
# =============================================================================

# Enable solution submission and viewing
SOLUTIONS_ENABLED=true

# Enable player rankings page
PLAYER_RANKINGS_ENABLED=true

# Enable live updates on the web interface
LIVE_UPDATES=true

# Enable challenge categories (future feature)
CHALLENGE_CATEGORIES=false

# =============================================================================
# UI CONFIGURATION
# =============================================================================

# Theme: "competitive", "classic", or "minimal"
THEME=competitive

# Show timestamps on submissions
SHOW_TIMESTAMPS=true

# Show client IP addresses (security consideration)
SHOW_CLIENT_IPS=false

# Maximum number of entries to show on leaderboard
MAX_LEADERBOARD_ENTRIES=100

# =============================================================================
# SUBMISSION CONFIGURATION
# =============================================================================

# Require solution files for submissions
REQUIRE_SOLUTIONS=true

# Maximum length of solution text/code (in characters)
MAX_SOLUTION_LENGTH=10000

# Note: Allowed file types are configured in the JSON config file:
# [".py", ".sh", ".txt", ".c", ".cpp", ".java", ".js"]